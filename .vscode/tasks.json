{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 활성 파일 빌드",
            "command": "D:\\Programs\\msys2\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "디버거에서 생성된 작업입니다."
        },
        {
            "type": "shell",
            "label": "C/C++: cmake.exe - cmake_generate_make",
            "command": "D:\\Programs\\msys2\\mingw64\\bin\\cmake.exe",
            "args": [
                "-G",
                "MinGW Makefiles",
                "-B",
                "build",
                "."
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "cmake current file."
        },
        {
            "type": "shell",
            "label": "C/C++: cmake.exe - make",
            "command": "D:\\Programs\\msys2\\mingw64\\bin\\cmake.exe",
            "args": [
                "--build",
                "build",
                "--",
                "${fileBasenameNoExtension}",
                "-j4"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "cmake current file.",
            "dependsOn":"C/C++: cmake.exe - cmake_generate_make"
        } 
    ],
    "version": "2.0.0"
}